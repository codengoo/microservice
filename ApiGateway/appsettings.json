{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "prime-route": {
        "ClusterId": "prime-cluster",
        "Match": {
          "Path": "/api/prime/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/api/prime"
          }
        ]
      },
      "user-route": {
        "ClusterId": "user-cluster",
        "Match": {
          "Path": "/api/user/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/api/user"
          }
        ]
      }
    },
    "Clusters": {
      "prime-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://prime-service.default.svc.cluster.local:3000"
          }
        }
      },
      "user-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://user-service.default.svc.cluster.local:3000"
          }
        }
      }
    }
  }
}